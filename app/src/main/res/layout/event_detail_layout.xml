<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<android.support.v7.widget.Toolbar
    android:id="@+id/event_Detail_Toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_primary"
    android:minHeight="?attr/actionBarSize"
    android:elevation="@dimen/cardview_default_elevation"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" />
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textview_detail_color"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#a3e71518"/>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/event_Name_Detail_TextView"
       android:textStyle="bold"
       android:text="EVENT NAME"
       android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENT INFORMATION"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:id="@+id/event_Informations_Detail_TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="Description not written."
        android:id="@+id/event_Description_Detail_TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>