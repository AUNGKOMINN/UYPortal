<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_places"
        android:entries="@array/map_places"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/my_accent"
        android:layout_alignBottom="@+id/map_places"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />
    <uycs.uyportal.ui.LinedEditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="sdsd"
        android:textColor="@android:color/black"
        android:textSize="24px"
        android:background="@color/white"
        tools:context=".LinedPaperActivity"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_anonymous" />

    <ImageView
        android:id="@+id/btn_anonymous"
        android:background="@mipmap/annonymous2_grey"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="right"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        android:background="@color/green1"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Post"
        android:layout_alignBottom="@+id/btn_anonymous"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp" />


</RelativeLayout>